{
    "extends": "@tsconfig/node24/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2023",
        "strict": true,
        "moduleResolution": "node",
        "ignoreDeprecations": "5.0",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}