  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node ./dist/server.js",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --config=./prisma.config.ts --schema=prisma/schema.prisma",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "migration:create": "prisma migrate dev --create-only",
    "migration:apply": "prisma migrate dev",
    "pretest": "npm run prisma:generate",
    "test": "NODE_OPTIONS='--localstorage-file=./jest-storage' jest",
    "test:watch": "npm run prisma:generate && NODE_OPTIONS='--localstorage-file=./jest-storage' jest --watch"
  },
