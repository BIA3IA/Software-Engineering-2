generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
}

// user table, use cuid for better indexing
// @@map is used to map the model to an existing table name in the database (useful when you have legacy databases)
model User {
  userId            String         @id @default(cuid())
  email             String         @unique
  password          String
  username          String         @unique
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  systemPreferences String[]
  refreshTokens     RefreshToken[]
  trips             Trip[]
  paths             Path[]
  reports           Report[]
  confirmations     Confirmation[]
}

model RefreshToken {
  tokenId   String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Trip {
  tripId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  startedAt    DateTime
  finishedAt   DateTime
  title        String?
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  /// [TripStatistics]
  statistics   Json
  /// [WeatherData]
  weather      Json?
  tripSegments TripSegment[]
  reports      Report[]
}

model Segment {
  segmentId           String        @id @default(cuid())
  createdAt           DateTime      @default(now())
  status              String        @default("OPTIMAL")
  /// [Coordinates[]]
  polylineCoordinates Json
  tripSegments        TripSegment[]
  pathSegments        PathSegment[]
  reports             Report[]
}

model TripSegment {
  id            String  @id @default(cuid())
  tripId        String
  segmentId     String
  nextSegmentId String?
  trip          Trip    @relation(fields: [tripId], references: [tripId], onDelete: Cascade)
  segment       Segment @relation(fields: [segmentId], references: [segmentId], onDelete: Cascade)

  @@unique([tripId, segmentId])
}

model Path {
  pathId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  pathSegments PathSegment[]
  status       String        @default("OPTIMAL")
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  visibility   Boolean       @default(false)
  creationMode String        @default("MANUAL")
  score        Float?
  title        String?
  description  String?
  distanceKm   Float?
}

model PathSegment {
  id            String   @id @default(cuid())
  pathId        String
  segmentId     String
  nextSegmentId String?
  status        String   @default("OPTIMAL")
  path          Path     @relation(fields: [pathId], references: [pathId], onDelete: Cascade)
  segment       Segment  @relation(fields: [segmentId], references: [segmentId]) // No onDelete: Cascade here otherwise deleting a path would delete also the trip segments
  reports       Report[]

  @@unique([pathId, segmentId])
}

model Report {
  reportId      String      @id @default(cuid())
  createdAt     DateTime    @default(now())
  userId        String
  user          User        @relation(fields: [userId], references: [userId], onDelete: Cascade)
  segmentId     String
  segment       Segment     @relation(fields: [segmentId], references: [segmentId])
  pathSegmentId String
  pathSegment   PathSegment @relation(fields: [pathSegmentId], references: [id], onDelete: Cascade)
  tripId        String
  trip          Trip        @relation(fields: [tripId], references: [tripId], onDelete: Cascade)
  obstacleType  String // Enum values: POTHOLE, WORK_IN_PROGRESS, FLOODING, OBSTACLE, OTHER
  status        String      @default("CREATED") // Enum values: CONFIRMED, REJECTED, IGNORED, CREATED
  reportMode    String // Enum values: MANUAL, AUTOMATIC (Maps to 'creationMode')
  position      Json

  confirmations Confirmation[]
}

model Confirmation {
  confirmationId String   @id @default(cuid())
  reportId       String
  report         Report   @relation(fields: [reportId], references: [reportId], onDelete: Cascade)
  userId         String
  user           User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt      DateTime @default(now())
  decision       String // e.g., "CONFIRMED", "REJECTED"
}
