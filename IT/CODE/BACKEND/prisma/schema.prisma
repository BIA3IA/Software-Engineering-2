generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
}

// user table, use cuid for better indexing
// @@map is used to map the model to an existing table name in the database (useful when you have legacy databases)
model User {
  userId            String         @id @default(cuid())
  email             String         @unique
  password          String
  username          String         @unique
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  systemPreferences String[]
  refreshTokens     RefreshToken[]
  trips             Trip[]
  paths             Path[]
}

model RefreshToken {
  tokenId   String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Trip {
  tripId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  startedAt    DateTime
  finishedAt   DateTime
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  /// [TripStatistics]
  statistics   Json
  /// [WeatherData]
  weather      Json?
  tripSegments TripSegment[]
}

model Segment {
  segmentId           String        @id @default(cuid())
  createdAt           DateTime      @default(now())
  status              String        @default("OPTIMAL")
  /// [Coordinates[]]
  polylineCoordinates Json
  tripSegments        TripSegment[]
  pathSegments        PathSegment[]
}

model TripSegment {
  id            String  @id @default(cuid())
  tripId        String
  segmentId     String
  nextSegmentId String?
  trip          Trip    @relation(fields: [tripId], references: [tripId], onDelete: Cascade)
  segment       Segment @relation(fields: [segmentId], references: [segmentId], onDelete: Cascade)

  @@unique([tripId, segmentId])
}

model Path {
  pathId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId]) // should we add onDelete: Cascade here?
  createdAt    DateTime      @default(now())
  pathSegments PathSegment[]
  status       String        @default("ACTIVE")
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  visibility   Boolean       @default(false)
  creationMode String        @default("MANUAL")
  score        Float?
  title        String?
  description  String?
}

model PathSegment {
  id            String  @id @default(cuid())
  pathId        String
  segmentId     String
  nextSegmentId String?
  path          Path    @relation(fields: [pathId], references: [pathId]) // should we add onDelete: Cascade here?
  segment       Segment @relation(fields: [segmentId], references: [segmentId]) // should we add onDelete: Cascade here?

  @@unique([pathId, segmentId])
}
