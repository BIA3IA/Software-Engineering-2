generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
}

// user table, use cuid for better indexing
// @@map is used to map the model to an existing table name in the database (useful when you have legacy databases)
model User {
  userId            String         @id @default(cuid())
  email             String         @unique
  password          String
  username          String         @unique
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  systemPreferences String[]
  refreshTokens     RefreshToken[]
  trips             Trip[]
  paths             Path[]
  reports           Report[]
  stats             Stat[]
  overallStat       OverallStat?
}

model RefreshToken {
  tokenId   String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Trip {
  tripId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  startedAt    DateTime
  finishedAt   DateTime
  title        String?
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  /// [WeatherData]
  weather      Json?
  tripSegments TripSegment[]
  reports      Report[]
  stat         Stat?
}

model Segment {
  segmentId           String        @id @default(cuid())
  createdAt           DateTime      @default(now())
  status              String        @default("OPTIMAL")
  /// [Coordinates[]]
  polylineCoordinates Json
  tripSegments        TripSegment[]
  pathSegments        PathSegment[]
  reports             Report[]
}

model TripSegment {
  id            String  @id @default(cuid())
  tripId        String
  segmentId     String
  nextSegmentId String?
  trip          Trip    @relation(fields: [tripId], references: [tripId], onDelete: Cascade)
  segment       Segment @relation(fields: [segmentId], references: [segmentId], onDelete: Cascade)

  @@unique([tripId, segmentId])
}

model Path {
  pathId       String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  pathSegments PathSegment[]
  status       String        @default("OPTIMAL") // Enum values: OPTIMAL, MEDIUM, SUFFICIENT, REQUIRES_MAINTENANCE, CLOSED
  /// [Coordinates]
  origin       Json
  /// [Coordinates]
  destination  Json
  visibility   Boolean       @default(false)
  creationMode String        @default("MANUAL")
  title        String?
  description  String?
  distanceKm   Float?
}

model PathSegment {
  id            String  @id @default(cuid())
  pathId        String
  segmentId     String
  nextSegmentId String?
  status        String  @default("OPTIMAL") // Enum values: OPTIMAL, MEDIUM, SUFFICIENT, REQUIRES_MAINTENANCE, CLOSED
  path          Path    @relation(fields: [pathId], references: [pathId], onDelete: Cascade)
  segment       Segment @relation(fields: [segmentId], references: [segmentId]) // No onDelete: Cascade here otherwise deleting a path would delete also the trip segments
}

model Report {
  reportId     String   @id @default(cuid())
  createdAt    DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  segmentId    String
  segment      Segment  @relation(fields: [segmentId], references: [segmentId], onDelete: Cascade)
  tripId       String?
  trip         Trip?    @relation(fields: [tripId], references: [tripId], onDelete: SetNull)
  sessionId    String?
  obstacleType String // Enum values: POTHOLE, WORK_IN_PROGRESS, FLOODING, OBSTACLE, OTHER
  pathStatus   String   @default("OPTIMAL") // Enum values: OPTIMAL, MEDIUM, SUFFICIENT, REQUIRES_MAINTENANCE, CLOSED
  status       String   @default("CREATED") // Enum values: CONFIRMED, REJECTED, IGNORED, CREATED
  position     Json

  @@index([sessionId])
  @@index([segmentId])
}

model Stat {
  statId String @id @default(cuid())
  tripId String @unique
  userId String

  // Per-trip metrics (Single trip performance)
  avgSpeed   Float @default(0) // km/h
  duration   Float @default(0) // seconds
  kilometers Float @default(0) // distance

  createdAt DateTime @default(now())

  // Relations
  trip Trip @relation(fields: [tripId], references: [tripId], onDelete: Cascade)
  // Ensure you add the back-relation to the User model as well
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
}

model OverallStat {
  userId String @id

  // Aggregated averages across all user trips
  avgSpeed      Float @default(0)
  avgDuration   Float @default(0)
  avgKilometers Float @default(0)

  // State-aware recomputation logic
  lastTripCount Int      @default(0)
  updatedAt     DateTime @updatedAt

  // Relation
  user User @relation(fields: [userId], references: [userId], onDelete: Cascade)
}
